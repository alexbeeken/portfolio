<form action="/fnr_out" align="center">

  <div class="form-group">
    <label for="text">Text:</label>
    <input id="text" name="text" class="form-control" type="text">
  </div>

  <div class="form-group">
    <label for="find">Word to find:</label>
    <input id="find" name="find" class="form-control" type="text">
  </div>

  <div class="form-group">
    <label for="replacement">Word to replace it with:</label>
    <input id="replacement" name="replacement" class="form-control" type="text">
  </div>

</br>

<input class="btn btn-danger" id="submit" type="submit" value="DO IT!">
</form>
